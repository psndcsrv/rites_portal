
- options = { :complete => mce_init_string, :omit_delete => true }
%div{ :id => dom_id_for(clazz), :class => "container_element" }
  .action_menu
    .action_menu_header_left
      = clazz.name
    .action_menu_header_right
      = link_to 'Configure Offerings', edit_offerings_portal_clazz_path(clazz)
      = link_to 'View Class', portal_clazz_path(clazz)
  %div{:id => dom_id_for(clazz, :item), :class => 'item'}
    %div{:id => dom_id_for(clazz, :details), :class => 'content'}
      = wrap_edit_link_around_content(clazz, options={:complete => mce_init_string}) do
        %h4= h(clazz.name)
        %p
          %ul.menu_v
            %li
              Teacher:
              - if clazz.teacher && (clazz.teacher.respond_to? :name)
                =h(clazz.teacher.name)
                %li
                  school:
                  - if clazz.teacher.respond_to? :schools
                    =h(clazz.teacher.schools.first.name)
                  - else
                    'no schools'
              - else
                'no teacher'
  

  
            %li
              Name:
              =h(clazz.name)
  
            %li
              Description:
              =h(clazz.description)
    
    
