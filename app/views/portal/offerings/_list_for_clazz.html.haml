- clazz.offerings.each do |offering|
  - if offering.runnable 
    - if is_teacher
      = render :partial => 'shared/offering_for_teacher', :locals => {:offering => offering}
    - else
      = render :partial => 'shared/offering_for_student', :locals => {:offering => offering}
  - else
    = "No runnable for this offering: #{offering.name}"
