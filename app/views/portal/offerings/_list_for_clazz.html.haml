%div{:id=>dom_id_for(clazz,:offering_container), :class=>"accordion_container"}
  %div{:id=>dom_id_for(clazz,:offering_toggle), :class=>"accordion_toggle"}
  %div{:id=>dom_id_for(clazz,:offering_content), :class=>"accordion_content"}
    = link_to 'Configure Offerings', edit_offerings_portal_clazz_path(clazz)
    %hr
    - clazz.offerings.each do |offering|
      - if offering.runnable 
        - if defined? is_teacher
          = render :partial => 'shared/offering_for_teacher', :locals => {:offering => offering}
        - else
          = render :partial => 'shared/offering_for_student', :locals => {:offering => offering}
      - else
        = "No runnable for this offering: #{offering.name}"
