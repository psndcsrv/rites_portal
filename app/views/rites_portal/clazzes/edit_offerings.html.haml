
%table{:width => "95%",:style=>"vertical-align:top;"}
  %tr
    %td{:width => "50%",:style=>"vertical-align:top; padding: 5px;"}
      - content_for :clazz_listing do
        = render :partial => "rites_portal/offerings/list_for_clazz", :locals => {:clazz => @clazz, :is_teacher => true}
      = render :partial => "shared/clazz_offering_header", :locals => {:clazz_name => @clazz.name}

    %td{:width => "50%",:style=>"vertical-align:top; padding: 5px;"}
      = render :partial => "shared/runnable_list", :locals => {:clazz => @clazz, :is_teacher => true}

= drop_receiving_element 'clazz_offerings', :url=> {:action=>'add_offering'}, :with => "{runnable_id: decode_model(element).id, runnable_type: decode_model(element).type, dragged_dom_id: element.id, dropped_dom_id: 'clazz_offerings'}"
= drop_receiving_element 'offering_list',  :url=> {:action=>'remove_offering'}, :with => "{offering_id: decode_model(element).id, dragged_dom_id: element.id, dropped_dom_id: 'offering_list'}"